{
  "private": "true",
  "license": "MIT",
  "author": "XLor",
  "scripts": {
    "build": "pnpm run build --filter ./packages",
    "dev:app": "pnpm -C packages/app dev",
    "dev:worker": "pnpm -C packages/worker dev",
    "format": "prettier --write packages/**/*.{ts,js,vue} --ignore-path .gitignore"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write"
    ],
    "*.vue": [
      "prettier --parser=vue --write"
    ]
  },
  "devDependencies": {
    "lint-staged": "^11.0.0",
    "pnpm": "^6.24.2",
    "prettier": "^2.3.2",
    "tsup": "^4.14.0",
    "typescript": "^4.3.5",
    "xlorpaste": "workspace:*"
  }
}

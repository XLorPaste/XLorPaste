{
  "private": "true",
  "license": "MIT",
  "author": "XLor",
  "scripts": {
    "build": "pnpm --filter \"./packages/**\" run build",
    "build:app": "pnpm -C packages/app build",
    "build:worker": "pnpm -C packages/worker build",
    "dev:app": "pnpm -C packages/app dev",
    "dev:worker": "pnpm -C packages/worker dev",
    "format": "prettier --write packages/**/*.{ts,js,mjs,vue} --ignore-path .gitignore",
    "publish": "pnpm publish -r --access public",
    "release": "zx scripts/release.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write"
    ],
    "*.vue": [
      "prettier --parser=vue --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.29",
    "cross-env": "^7.0.3",
    "husky": "^1.2.0",
    "lint-staged": "^11.0.0",
    "miniflare": "^2.4.0",
    "prettier": "^2.3.2",
    "tslib": "^2.3.1",
    "tsup": "^4.14.0",
    "typescript": "^4.4.4",
    "xlorpaste": "workspace:*",
    "zx": "^4.2.0"
  },
  "packageManager": "pnpm@7.0.0"
}
